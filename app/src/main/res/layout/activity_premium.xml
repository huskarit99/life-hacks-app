<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Highlight"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.7"
        android:scaleType="fitXY"
        android:id="@+id/ivBgBodyDetail"
        android:src="@drawable/bg_body_premium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".25"
        android:id="@+id/ivBgHeaderDetail"
        android:scaleType="fitXY"
        android:src="@drawable/bg_header_premium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:id="@+id/ivArrowBack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.073"
        app:layout_constraintHorizontal_bias="0.7">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_setting"
        android:id="@+id/ivSetting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintHorizontal_bias="0.95">
    </ImageView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:src="@drawable/shelf_wooden_2"
        android:id="@+id/ivWoodenShelf"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5">
    </ImageView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:src="@drawable/shadow_shelf_wooden_2"
        android:id="@+id/ivShadowSelfWooden"
        app:layout_constraintTop_toTopOf="@id/ivWoodenShelf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivWoodenShelf"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="0px">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/medal"
        android:id="@+id/ivMedal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivWoodenShelf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:text="Mở khoá tất cả nội dung nâng cao và không hiển thị quảng cáo"
        android:textColor="@color/Primary"
        android:textStyle="bold"
        android:textSize="24dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivWoodenShelf"
        app:layout_constraintTop_toBottomOf="@id/ivMedal">
    </TextView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:id="@+id/tvNote"
        android:text="Mở khoá hơn 1000 bí kíp nâng cao và không hiển thị quảng cáo bằng cách đăng ký gói VIP. Chúng tôi cũng sẽ cập nhật nội dung nâng cao thường xuyên."
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:letterSpacing="0.03"
        app:layout_constraintTop_toBottomOf="@id/ivWoodenShelf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.05">
    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".25"
        android:scaleType="fitXY"
        android:id="@+id/ivBgFooterDetail"
        android:src="@drawable/bg_footer_premium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1">
    </ImageView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.09"
        android:src="@drawable/btn_register"
        android:id="@+id/ivRegister"
        app:layout_constraintTop_toBottomOf="@id/tvNote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivNavigationBar">
    </ImageView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.06"
        android:text="Đăng ký gói VIP chỉ với 19.900đ/tháng"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/Neutral"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ivRegister"
        app:layout_constraintLeft_toLeftOf="@id/ivRegister"
        app:layout_constraintRight_toRightOf="@id/ivRegister"
        app:layout_constraintBottom_toBottomOf="@id/ivRegister">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLater"
        android:text="Để sau"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/ivRegister"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivNavigationBar">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Nội dung nâng cao"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivSetting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.07"
        android:textColor="@color/White"
        app:layout_constraintHorizontal_bias="0.25"
        android:layout_margin="0dp">
    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivNavigationBar"
        android:src="@drawable/home_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.98"
        android:layout_margin="0dp">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>