<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83C5BE"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".25"
        android:id="@+id/ivBgHeaderDetail"
        android:scaleType="fitXY"
        android:src="@drawable/bg_header_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:id="@+id/btnArrowBack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.072"
        app:layout_constraintHorizontal_bias="0.7">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_setting"
        android:id="@+id/ivButtonSetting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintHorizontal_bias="0.95">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Chăm sóc bé"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivButtonSetting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.07"
        android:textColor="#FFFFFF"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_margin="0dp">
    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/ivBgBodyDetail"
        android:src="@drawable/bg_body_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".25"
        android:scaleType="fitXY"
        android:id="@+id/ivBgFooterDetail"
        android:src="@drawable/bg_footer_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/barrierCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame3"
        android:id="@+id/frame3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.42">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame2"
        android:id="@+id/frame2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.36">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame1"
        android:id="@+id/frame1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3">
    </ImageView>
    <TextView
        android:layout_width="290dp"
        android:layout_height="260dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="290dp"
        app:layout_constraintHeight_max="260dp"
        app:layout_constraintVertical_bias="0.32"
        android:textColor="#4F4F4F"
        android:textSize="20dp"
        android:autoSizeTextType="uniform"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="3dp"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeMaxTextSize="20dp"
        android:autoSizeStepGranularity="1dp"
        android:text="Với những bé mới lọt lòng, tư thế bế trẻ an toàn và dễ dàng nhất là cho bé nằm ngang. Mẹ cố gắng giữ cho phần đầu và cổ của bé nằm trên một đường thẳng, bụng bé ép vào bụng mẹ, mặt bé quay vào ngực mẹ.">
    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back_left"
        android:id="@+id/btnBackLeft"
        app:layout_constraintTop_toBottomOf="@+id/frame1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/barrierCenter"
        app:layout_constraintVertical_bias="0.1">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back_right"
        android:id="@+id/btnBackRight"
        app:layout_constraintTop_toBottomOf="@id/frame1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/barrierCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.1">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivNavigationBar"
        android:src="@drawable/home_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.98"
        android:layout_margin="0dp">
    </ImageView>
    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barrierUnderButtonBack"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="btnBackLeft, btnBackRight">

    </androidx.constraintlayout.widget.Barrier>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_fb"
        android:id="@+id/btnSharingFb"
        app:layout_constraintTop_toBottomOf="@id/barrierUnderButtonBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnSharingTwitter"
        app:layout_constraintVertical_bias="0.6">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_twitter"
        android:id="@+id/btnSharingTwitter"
        app:layout_constraintTop_toBottomOf="@id/barrierUnderButtonBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnSharingFb"
        app:layout_constraintRight_toLeftOf="@id/btnSharingMail"
        app:layout_constraintVertical_bias="0.6">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_mail"
        android:id="@+id/btnSharingMail"
        app:layout_constraintTop_toBottomOf="@id/barrierUnderButtonBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnMoreOption"
        app:layout_constraintLeft_toRightOf="@id/btnSharingTwitter"
        app:layout_constraintVertical_bias="0.6">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more_option"
        android:id="@+id/btnMoreOption"
        app:layout_constraintTop_toBottomOf="@id/barrierUnderButtonBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnSharingMail"
        app:layout_constraintVertical_bias="0.6">
    </ImageView>
    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barrierTopSharingButtons"
        app:barrierDirection="top"
        app:constraint_referenced_ids="btnSharingFb, btnSharingMail, btnSharingTwitter, btnMoreOption">
    </androidx.constraintlayout.widget.Barrier>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chia sẻ bí kíp này:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/barrierTopSharingButtons"
        app:layout_constraintTop_toBottomOf="@id/barrierUnderButtonBack"
        app:layout_constraintLeft_toLeftOf="@id/btnBackLeft"
        app:layout_constraintVertical_bias="0.75">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>